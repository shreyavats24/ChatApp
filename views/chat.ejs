<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat Interface</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/stylesheets/chat.css">
</head>
<body>
  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Sidebar -->
      <div class="col-2 bg-primary text-white sidebar d-flex flex-column align-items-center py-3">
        <!-- Profile Icon -->
        <div class="icon mb-4">
          <i class="fas fa-user" style="font-size: 2rem; cursor: pointer;"></i>
        </div>
        <!-- Chats Icon -->
        <div class="icon mb-4">
          <i class="fas fa-comments" style="font-size: 2rem; cursor: pointer;"></i>
        </div>
        <!-- Settings Icon -->
        <div class="icon mb-4">
          <i class="fas fa-cog" style="font-size: 2rem; cursor: pointer;"></i>
        </div>
      </div>

      <!-- Chat List Sidebar -->
      <div class="col-3 bg-light p-3 chat-list">
        <!-- Chat List Header -->
        <h5 class="mb-3">Chats</h5>
        <!-- Chat Items -->
        <div class="chat-item d-flex align-items-center p-2 mb-2 bg-white rounded">
          <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle me-2" width="40">
          <div>
            <h6 class="mb-0">Nicolas Klaus</h6>
            <small class="text-muted">Great shots on Dribbble!</small>
          </div>
          <span class="ms-auto text-muted">12:35</span>
        </div>
        <!-- Repeat Chat Items as needed -->
      </div>

      <!-- Main Chat Area -->
      <div class="col-7 bg-light p-3 d-flex flex-column justify-content-between chat-area">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center chat-header mb-3">
          <!-- User Info -->
          <div class="d-flex align-items-center">
            <img src="https://via.placeholder.com/50" alt="User" class="rounded-circle me-2" width="50">
            <div>
              <h6 class="mb-0">Nicolas Klaus</h6>
            </div>
          </div>
          <!-- Call Icons -->
          <div class="d-flex align-items-center">
            <i class="bi bi-camera-video-fill me-4" style="font-size: 1.5rem; cursor: pointer;"></i>
            <i class="bi bi-telephone-fill" style="font-size: 1.5rem; cursor: pointer;"></i>
          </div>
        </div>

        <!-- Chat Messages -->
        <div class="chat-body flex-grow-1 mb-3">
          <div class="message d-flex mb-2">
            <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle me-2" width="40">
            <div class="message-content bg-white p-2 rounded">
              Great shots on Dribbble!
              <small class="text-muted d-block text-end">12:44</small>
            </div>
          </div>
          <!-- More messages -->
          <div class="message d-flex justify-content-end mb-2">
            <div class="message-content bg-primary text-white p-2 rounded">
              Thank you, how are you?
              <small class="d-block text-end">12:45</small>
            </div>
            <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle ms-2" width="40">
          </div>
        </div>

        <!-- Typing Area -->
        <div class="typing-indicator mb-2">
          <small class="text-muted">Nicolas is typing...</small>
        </div>

        <!-- Message Input -->
        <div class="chat-input mt-3">
          <div class="input-group">
            <input type="text" class="form-control" id="message" placeholder="Type your message here...">
            <button title="h" class="btn btn-outline-secondary"><i class="bi bi-emoji-smile"></i></button>
            <button title="h" class="btn btn-primary"><i class="bi bi-send" id="sendBtn"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://kit.fontawesome.com/c5ef7b291b.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js" ></script>
  <script src="/javascripts/chatapp.js"></script>
</body>
</html>
